<CustomBoxLayout@BoxLayout>:
    orientation: "horizontal"

<Card@Widget>:
    image_file: "greybackground.png"
    card_value: 0
    canvas:
        Rectangle:
            source: self.image_file
            size: self.size
            pos: self.pos

<BlackjackLayout>:
    orientation: "vertical"
    deal: deal
    card1: card1
    card2: card2
    card3: card3
    card4: card4
    card5: card5
    user_card1: user_card1
    user_card2: user_card2
    user_card3: user_card3
    user_card4: user_card4
    user_card5: user_card5
    hit_me: hit_me
    blank: blank
    count: count
    name_text: "BLACKJACK"
    stay_me: stay_me
    dealer_counter: dealer_counter
    dealer_number: dealer_number
    bank: bank

    Card:
        id: name

        Label:
            text: root.name_text
            font_size: dp(50)
            size_hint_y: 1
            color: 0,0,0,1
            size: name.size
            pos: name.pos

    CustomBoxLayout:
        size_hint_y: 1

        TextInput:
            text: "Betting Amount:"
            font_size: dp(30)
            input_filter: 'float'
            on_focus: self.text = ""

        Widget:
            id: bank
            canvas:
                Color:
                    rgba: .75,.75,.75,.45
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                id: money
                text: "$10000"
                color: 1,1,1,1
                size: bank.size
                pos: bank.pos
                font_size: dp(30)


        Button:
            size_hint_x:
            id: deal
            text: "Deal"
            font_size: dp(30)
            on_press: root.create_deck()

    BoxLayout:
        size_hint_y: 2
        orientations: "horizontal"

        Card:
            id: card1

        Card:
            id: card2

        Card:
            id: card3

        Card:
            id: card4

        Card:
            id: card5

        Card:

            id: dealer_counter
            Label:
                id: dealer_number
                text: ""
                color: 0,0,0,1
                font_size: dp(30)
                size: dealer_counter.size
                pos: dealer_counter.pos

    BoxLayout:
        size_hint_y: 2
        orientations: "horizontal"

        Card:
            id: user_card1

        Card:
            id: user_card2

        Card:
            id: user_card3

        Card:
            id: user_card4

        Card:
            id: user_card5

        Card:
            #image_file: ""
            id: blank
            Label:
                id: count
                text: ""
                color: 0,0,0,1
                font_size: dp(30)
                size: blank.size
                pos: blank.pos

    CustomBoxLayout:
        size_hint_y: 1
        Button:
            id: hit_me
            text: "Hit"
            on_press: root.hit()
            font_size: sp(20)
        Button:
            id: stay_me
            text: "Stay"
            on_press: root.stay()
            font_size: sp(20)
        Button:
            text: "Double"
            font_size: sp(20)

