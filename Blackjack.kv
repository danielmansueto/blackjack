<CustomBoxLayout@BoxLayout>:
    orientation: "horizontal"

<Card@Widget>:
    image_file: "greybackground.png"
    card_value: 0
    canvas:
        Rectangle:
            source: self.image_file
            size: self.size
            pos: self.pos

<Spacer@Widget>:
    size_hint_x: .5


<BlackjackLayout>:
    orientation: "vertical"
    deal: deal
    card1: card1
    card2: card2
    card3: card3
    card4: card4
    card5: card5
    user_card1: user_card1
    user_card2: user_card2
    user_card3: user_card3
    user_card4: user_card4
    user_card5: user_card5
    hit_me: hit_me
    blank: blank
    user_count: user_count

    Label:
        text: "BLACKJACK"
        font_size: 100
        size_hint_y: 1

    CustomBoxLayout:
        size_hint_y: 1
        Label:
            text: "$"
            size_hint_x: .2
            font_size: 120
            background_color: 1,1,1,1
        TextInput:
            text: ""
            font_size: 120
            input_filter: 'float'

        Button:
            id: deal
            text: "Deal"
            on_press: root.create_deck()

    BoxLayout:
        size_hint_y: 2
        orientations: "horizontal"

        Card:
            id: card1

        Card:
            id: card2

        Card:
            id: card3

        Card:
            id: card4

        Card:
            id: card5

        Widget:
            canvas:
                Rectangle:
                    source: "boardgamepack/PNG/Cards/cardBack_red5.png"
                    size: self.size
                    pos: self.pos

    BoxLayout:
        size_hint_y: 2
        orientations: "horizontal"

        Card:
            id: user_card1

        Card:
            id: user_card2

        Card:
            id: user_card3

        Card:
            id: user_card4

        Card:
            id: user_card5

        Card:
            id: blank
            user_count: 0
            Label:
                text: ""
                color: 0,0,0,1
                size: blank.size
                pos: blank.pos


    CustomBoxLayout:
        size_hint_y: 1
        Button:
            id: hit_me
            text: "Hit"
            on_press: root.hit()
        Button:
            text: "Stay"
        Button:
            text: "Double"

