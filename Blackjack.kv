<CustomBoxLayout@BoxLayout>:
    orientation: "horizontal"

<Card@Widget>:
    image_file: "greybackground.png"
    card_value: 0
    canvas:
        Rectangle:
            source: self.image_file
            size: self.size
            pos: self.pos

<Spacer@Widget>:
    size_hint_x: .5


<BlackjackLayout>:
    orientation: "vertical"
    deal: deal

    Label:
        text: "BLACKJACK"
        font_size: 100
        size_hint_y: 1

    CustomBoxLayout:
        size_hint_y: 1
        TextInput:
            text: ""
            font_size: 100

        Button:
            id: deal
            text: "Deal"
            on_press: root.create_deck()

    BoxLayout:
        size_hint_y: 2
        orientations: "horizontal"

        Card:
            id: card1

        Card:
            id: card2

        Card:
            id: card3

        Card:
            id: card4

        Card:
            id: card5

        Widget:
            canvas:
                Rectangle:
                    source: "boardgamepack/PNG/Cards/cardBack_red5.png"
                    size: self.size
                    pos: self.pos

    BoxLayout:
        size_hint_y: 2
        orientations: "horizontal"

        Card:
            id: user_card1

        Card:
            id: user_card2

        Card:
            id: user_card3

        Card:
            id: usercard3

        Card:
            id: card3

        Label:
            canvas:
                Rectangle:
                    source: "greybackground.png"
                    size: self.size
                    pos: self.pos

            text: "Your hand:"

    CustomBoxLayout:
        size_hint_y: 1
        Button:
            text: "Hit"
        Button:
            text: "Stay"
        Button:
            text: "Double"

